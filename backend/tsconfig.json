{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.ts"]
}
